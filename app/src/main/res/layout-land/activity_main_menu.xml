<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/chooseBreedTextView2"
        android:layout_width="226dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="          Choose breed "
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/mainMenuFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:style="@android:style/Widget.TextView.PopupMenu" />

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.olyapasy.happydog.fragment.CategoryFragment"
        android:layout_width="299dp"
        android:layout_height="233dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp" />

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.olyapasy.happydog.fragment.MainMenuFragment"
        android:layout_width="289dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/categoryFragment"
        app:layout_constraintTop_toBottomOf="@+id/chooseBreedTextView2"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>